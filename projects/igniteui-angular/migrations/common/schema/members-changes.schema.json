{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "MemberChange": {
            "properties": {
                "definition": {
                    "description": "The full definition of a member",
                    "type": "string"
                },
                "owner": {
                    "$ref": "#/definitions/Pick<TemplateElement,\"className\">",
                    "description": "The class/interface that this member belongs to"
                },
                "remove": {
                    "description": "Remove directive/component/property",
                    "type": "boolean"
                },
                "replaceWith": {
                    "description": "Replace original selector/property with new one",
                    "type": "string"
                }
            },
            "required": [
                "definition",
                "owner"
            ],
            "type": "object"
        },
        "Pick<TemplateElement,\"className\">": {
            "description": "From T, pick a set of properties whose keys are in the union K",
            "properties": {
                "className": {
                    "description": "Base type of the element",
                    "type": "string"
                }
            },
            "required": [
                "className"
            ],
            "type": "object"
        }
    },
    "properties": {
        "changes": {
            "description": "An array of changes to class members",
            "items": {
                "$ref": "#/definitions/MemberChange"
            },
            "type": "array"
        }
    },
    "required": [
        "changes"
    ],
    "type": "object"
}

